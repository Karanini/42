{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Generic debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/a.out",
            "args": ["()((()"],
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "console": "integratedTerminal",
            "externalConsole": false,
            "internalConsoleOptions": "neverOpen",

            "stopAtEntry": true,
            "setupCommands": [
                {
                    "description": "Activer pretty-printing pour gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
